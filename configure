# This configure script is currently unusual in that it takes environment
# variables instead of command line flags.
#   COMPILER_PATH: Used by the underlying build/compiler_exes.sh
#   PREFIX: The location to install the cc-wrapper

set -e
set -o pipefail

makefile_inc="src/Makefile.gen"
config_h="src/config.h"

error() {
  local status="$?"
  rm -f "$makefile_inc" "$config_h"
  return "$status"
}
trap error ERR INT

echo -n "">"$makefile_inc"
compiler_exes="$(build/compiler_exes.sh --exe-only)"
echo "INSTALL_EXES = $(echo $compiler_exes)">>"$makefile_inc"
echo "PREFIX ?= ${PREFIX-/usr}" >>"$makefile_inc"

build/gen_config.sh >"$config_h" 2>/dev/null
